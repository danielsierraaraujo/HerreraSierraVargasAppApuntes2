<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HerreraSierraVargasAppApuntes2.Models"
             x:Class="HerreraSierraVargasAppApuntes2.Views.AboutPage"
             Title="About to Devps Team"
             x:DataType="models:About">
    <ContentPage.BindingContext>
        <models:About />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="halo.png"
                   SemanticProperties.Description="Daniel Icon"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="{Binding Name}" VerticalOptions="End" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>